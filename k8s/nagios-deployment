apiVersion: apps/v1
kind: Deployment
metadata:
  name: nagios-deployment
  labels:
    run: nagios-deploy
spec:
  replicas: 1
  selector:
    matchLabels:
      run: nagios-deploy
  template:
    metadata:
      labels:
        run: nagios-deploy
    spec:
      containers:
      - name: nagios-container
        image: jasonrivers/nagios


---
apiVersion: v1
kind: Service
metadata:
  name: nagios-service
spec:
  selector:
    run: nagios-deployment
  type: NodePort
  ports:
    - port: 80
      targetPort: 80
      nodePort: 30008

